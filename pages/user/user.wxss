/* pages/user/user.wxss */

.main {
  display: flex;
  flex-wrap: wrap;
}

.cell_input {
  margin-bottom: 20rpx;
  border-bottom: 1px #999 solid;
}

.userinfo {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  width: 100%;
}

.flex-row {
  display: flex;
  width: 100%;
  margin: 2% 0 3% 0;
  justify-content: center;
}

.flex-col {
  display: flex;
  width: 100%;
  justify-content: center;
}

.avatar {
  width: 40%;
  justify-content: flex-end;
}

.meta {
  width: 60%;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  display: inline-block;
  border-radius: 100%;
}

.userinfo-stuname {
  display: flex;
  height: 100%;
  font-size: 55rpx;
  justify-content: center;
}

.userinfo-stuid {
  justify-content: center;
  font-size: 25rpx;
  background: #bc0;
  color: #fff;
  padding: 8rpx;
  margin: 2%;
  border-radius: 10%;
}