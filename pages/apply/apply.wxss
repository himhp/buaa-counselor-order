/* apply.wxss */
.main {
  font-size: 35rpx;
}

text {
  margin-left: 20rpx;
}

.tips {
  text-align: center;
  color: #f00;
  margin: 3%;
}

.tips_text {
  border: 1rpx #999 solid;
  padding: 10rpx;
  border-radius: 8rpx;
  background-color: #eee;
}

.bottom-row {
  margin: 0;
  width: 50%;
}

.bottom-btn {
  margin: 0;
  width: 100%;
  font-size: inherit;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.order-block {
  display: flex;
  flex-wrap: wrap;
  margin: 4% 2% 4% 2%;
  border: 1rpx #999 solid;
  border-radius: 15rpx;
}

.order-info {
  display: flex;
  line-height: 250%;
}

.half-width {
  width: 50%;
}

.full-width {
  width: 100%;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #fafafa;
}

.bg-n {
  background: #eee;
}

.title {
  color: #449eff;
}